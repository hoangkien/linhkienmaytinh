
<div id="content-header">
	<div id="title">
		Edit Profile
	</div>
	<div id="content-menu">
		<ul class="content-menu">
			<li class="content-menu"><button class='btn'><%= link_to"Back",admin_news_index_path %></button></li>
		</ul>
	</div>
</div>
<%= form_for :news , url: admin_news_path(@news.id), method: :put  do |f| %>
<div id="main-content">
	<div id="box">
		<div id="action">
			<div class="title">
				News Infomation
			</div>
			<div class="action">
				<ul>
					<li><%= f.submit "Update", :disable_with => 'Adding...' , class:'btn'%></li>
					<li><%= f.submit "Reset", :disable_with => 'Reseting...',class: 'btn', type:'reset' %></li>
				</ul>
			</div>
		</div>
		<div id="main">
			<table>
				<tr>
					<td class="left"><%= f.label :title, "Title" %></td>
					<td><%= f.text_area :title , class:'title'%></td>
				</tr>
				<tr>
					<td class="left"><%= f.label :content, "Content" %></td>
					<td><%= f.cktext_area :content %></td>
				</tr>
			</table>
		</div>
	</div>
</div>
<% end -%>