<tr>
  <td><%= category.id%></td>
  <td><%= category.name %></td>
  <td><%= category.parent_id == 0 ? "Danh mục gốc" : Category.find(category.parent_id).name %></td>
  <td>
    <%= link_to'Edit',edit_admin_category_path(category) %> &nbsp; &nbsp;
    <%= link_to'Delete',admin_category_path(category),
      method: :delete,
      data: { confirm:'Are you ok?'} %>&nbsp; &nbsp;
    <%= link_to'View',cate_show_path(category) %>
  </td>
</tr>
