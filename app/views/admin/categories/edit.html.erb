<div id="content-header">
	<div id="title">
		Edit category information
	</div>
	<div id="content-menu">
		<ul class="content-menu">
			<li class="content-menu"><%= button_to"Back",admin_categories_path,method:'get',class:'btn' %></li>
		</ul>
	</div>
</div>
<%= form_for :category , url: admin_category_path, method: :put do |f| %>
<div id="main-content">
	<div id="box">
		<div id="action">
			<div class="title">
				Category Information
			</div>
			<div class="action">
				<ul>
					<li><%= f.submit "Update", :disable_with => 'Adding...' , class:'btn'%></li>
					<li><%= f.submit "Reset", :disable_with => 'Reseting...',class: 'btn', type:'reset' %></li>
				</ul>
			</div>
		</div>
		<div id="main">
			<table>
				<tr>
					<td class="left"><%= f.label :id, "Category Id" %></td>
					<td><%= f.text_field :id , class:'text_field'  %></td>
				</tr>
				<tr>
					<td class="left"><%= f.label :name, "Category name" %></td>
					<td><%= f.text_field :name, class:'text_field' %></td>
				</tr>
			</table>
		</div>
	</div>
</div>
<% end -%>