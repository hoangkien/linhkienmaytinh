<div id="content-header">
	<div id="title">
		Categories List
	</div>
	<div id="content-menu">
		<ul class="content-menu">
			<li class="content-menu">
				<%= link_to "All products", admin_products_path %>
			</li>
			<li class="content-menu">
				<%= link_to "Categories list", admin_categories_path %>
			</li>
		</ul>
	</div>
</div>
<div id="main-content">
	<div id="action">
			<%= button_to'Add New',new_admin_category_path,class:'btn', method: :get %>
	</div>
	<div id="main">
		<table >
			<tr>
				<td>Category Id: </td>
				<td><%= @category.id %></td>
			</tr>
			<tr>
				<td>Category Name: </td>
				<td><%= @category.name %></td>
			</tr>
		</table>
	</div>
</div>