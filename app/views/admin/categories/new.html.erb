<div id="content-header">
	<div id="title">
		Add new Category
	</div>
	<div id="content-menu">
		<ul class="content-menu">
			<li class="content-menu"><%= button_to"Back",admin_categories_path,method:'get',class: 'btn btn-primary' %></li>
		</ul>
	</div>
</div>
<%= form_for :category , url: admin_categories_path do |f| %>
<div id="main-content">
	<div id="box">
		<div id="action">
			<div class="title">
				Create a new category
			</div>
			<div class="action">
				<ul>
					<li><%= f.submit "Add", :disable_with => 'Adding...' , class: 'btn btn-primary'%></li>
					<li><%= f.submit "Reset", :disable_with => 'Reseting...',class: 'btn btn-info', type:'reset' %></li>
				</ul>
			</div>
		</div>
		<div id="main">
			<table>
				<tr>
					<td class="left"><%= f.label :name, "Tên danh mục" %></td>
					<td><%= f.text_field :name, class: 'form-control' %></td>
				</tr>
				<tr>
					<td class="left">
						<%= f.label :parent_id, "Danh mục cha" %>
					</td>
					<td>
						<%= select_tag(:parent_id, options_for_select(@list_parent,0), class: "form-control") %>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<% end -%>
