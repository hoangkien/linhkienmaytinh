<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Admin</title>
	<%= stylesheet_link_tag "admin_style"%>
	<%= javascript_include_tag "jquery"%>
	<%= javascript_include_tag "rails"%>
	
	<%= stylesheet_link_tag "jquery.datetimepicker"%>
	<%= javascript_include_tag "jquery.datetimepicker"%>
	<%= javascript_include_tag "#{controller.controller_name}" %>
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="wraper">
		<div id="header">
			Administration
		</div>
		<div id="menu">
			<div class="main-menu">
				<ul class="main-menu">
					<li class="main-menu home"><%= link_to'Home',admin_home_index_path %></li>
					<li class="main-menu member"><%= link_to'Thành Viên',admin_members_path %></li>
					<li class="main-menu"><%= link_to'Hệ Thống', admin_config_index_path %></li>
					<li class="main-menu"><%= link_to'Sản Phẩm', admin_products_path%></li>
					<li class="main-menu"><%= link_to'Bài Viết', admin_news_index_path%></li>
				</ul>
			</div>
			<div id="info">
				<ul class="info">
					<li class="info">Chào <strong><%= session[:user_data][:fullname] %></strong></li>
					<li class="info"><%= link_to"Thông tin",admin_member_path(session[:user_data][:id], method:'get')%></li>
					<li class="info"><%= link_to"Đăng Xuất",admin_login_path(session[:user_data][:id]), method: :delete, data:{confirm:'Are you logout ?'}%></li>
				</ul>
			</div>
		</div>
		<div id="content">
			<%= yield %>
		</div>
		<div id="footer">
			Copyright &copy by HoangKien
		</div>
	</div>
</body>
</html>