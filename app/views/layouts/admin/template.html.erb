<%= provide(:title,controller.controller_name)%>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Admin</title>
	<%= stylesheet_link_tag "application"%>
	<%= javascript_include_tag "application"%>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="wraper">
		<div id="header">
			Administration
		</div>
		<div id="menu">
			<div class="main-menu">
				<ul class="main-menu">
					<li class='<%= controller_name == "home" ? "main-menu active" : " main-menu " %>'><%= link_to t('home.menu.home'),admin_home_index_path %></li>
					<li class='<%= controller_name == "members" ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.member'),admin_members_path %></li>
					<li class='<%= ['products','categories','trademaks'].include?(controller_name) ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.product'), admin_products_path%></li>
					<li class='<%= controller_name == "news" ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.news'), admin_news_index_path%></li>
					<li class='<%= controller_name == "contacts" ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.contact'),admin_contacts_path%></li>
					<li class='<%= controller_name == "config" ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.setting'), admin_config_index_path, data: {"no-turbolink" => true} %></li>
          <li class='<%= controller_name == "slides" ? "main-menu active" : " main-menu " %>'><%= link_to t('admin.menu.slide'), admin_slides_path%></li>
				</ul>
			</div>
			<div id="info">
				<ul class="info">
					<li class="info">Hi, <strong><%= current_user.fullname %></strong></li>
					<li class="info"><%= link_to t('admin.menu.info'),admin_member_path(session[:user_id], method:'get')%></li>
					<li class="info"><%= link_to t('admin.menu.logout'),admin_login_destroy_path, method: :delete, data:{confirm:'Are you logout ?'}%></li>
				</ul>
			</div>
		</div>
		<div id="content">
			<%= yield %>
		</div>
		<div id="footer">
			Copyright &copy by HoangKien
		</div>
	</div>
</body>
</html>
