<script type="text/javascript">
	$(document).ready(function(){
		$(".categories li ul.subcate li").mouseover(function(){
			$(this).parent().parent().css("background","rgb(247, 247, 247)");
		});
		$(".categories li ul.subcate li").mouseout(function(){
			$(this).parent().parent().css("background","#FFF");
		});
	});
</script>
<style type="text/css">
	span.sl{
		font-size: 13px;
  	color: rgba(79, 72, 72, 0.74);
  	line-height: 40px;
  	margin-left: 10px;
	}
</style>
 <div class="header_slide">
			<div class="header_bottom_left">
				<div class="categories">
				  <ul>
				  	<h3>Danh mục</h3>
						<% @category.each do |cate|%>
							<li><%= link_to "#{cate.name}", category_path(cate)%>
								<% if Category.subcategories(cate.id).count > 0 %>
									<ul class="subcate">
										<% Category.subcategories(cate.id).each do |subcate| %>
											<li><%= link_to "#{subcate.name}",category_path(subcate)%></li>
										<% end -%>
									</ul>
								<% end -%>
							</li>
						<% end -%>
				  </ul>
				</div>
				<br/>
				<br/>
				<div class="categories">
					<ul>
						<h3>Hỗ trợ</h3>
						<li><a>Phone: <font color="red"><%= @info.phone if !@info.nil?%></font></a></li>
						<li><a>Hotline: <font color="red"><%= @info.hotline if !@info.nil?%></font></a></li>
					</ul>
				</div>
	  	     </div>
					 <div class="header_bottom_right">
					 	 <div class="slider">
							 <div id="slider">
                  <div id="mover">
                    <div id="slide-1">
                      <%= render Slide.where(active:true)%>
			              </div>
                  </div>
		            </div>
					 <div class="clear"></div>
		         </div>
		      </div>
		   <div class="clear"></div>
		</div>
 <div class="main">
  <div class="content">
  		<div class="new">
	  		<div class="content_top">
				<div class="heading">
					<div class="cate-name" ><h3 style="margin-top:0px">Sản Phẩm Mới</h3></div>
				</div>
					<div class="clear"></div>
				</div>
				<div class="section group">
					<%= render @products_new %>
				</div>
			</div>
    	<% @category.each do |category|%>
			<div class="content">
				<div class="content_top">
					<div class="heading">
						<div class="cate-name"><h3><%= category.name%></h3></div>
						<span class="sl"><%= "- có " +Category.count(category.id).to_s + " Sản phẩm" %> </span>
					</div>
					 <div class="see">
		    			<p><%= link_to"Tất cả sản phẩm", category_path(category)%></p>
		    		</div>
					<div class="clear"></div>
				</div>
				<div class="section group">
				<% if Category.count(category.id) > 0 %>
					<% if Category.subcategories(category.id).count > 0 %>
						<% Category.where(parent_id: category).each do |subcate| %>
							<%= render subcate.products.limit(5).order(id: :desc) %>
						<% end -%>
					<% else %>
						<%= render category.products.limit(5).order(id: :desc) %>
					<% end -%>
				<% else %>
					<%= render "home/products/not.html.erb"%>
				<% end -%>
				</div>
			</div>
		<% end -%>
  </div>
 </div>
</div>
