<script type="text/javascript">
	$(document).ready(function(){
		$(".header_bottom .menu ul li.product").css("background","#B81D22")
	});
</script>
<div class="main">
    <div class="content">
    	<div class="content_top">
    		<div class="back-links">
    		<p><a href="index.html">Home</a> >>>> <%= link_to"#{@product.name}",products_view_path(@product)%></p>
    	    </div>
    		<div class="clear"></div>
    	</div>
    	<div class="section group">
				<div class="cont-desc span_1_of_2">
				  <div class="product-details">				
					<div class="grid images_3_of_2">
						<div id="container">
						   <div id="products_example">
							   <div id="products">
								<div class="slides_container">
									<a href="#" target="_blank"><%= image_tag("#{@product.image}",size:"300x220")%></a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="desc span_3_of_2">
				<p><span>Mã: </span><%= @product.product_id %></p>
				<p><span>Giá: </span><font color="red">Liên Hệ</font></p>
				<p><span>Công suất: </span><%= @product.capacity %></p>
				<p><span>Kích thuớc: </span><%= @product.size%></p>
				<p><span>Nguồn sáng: </span><%= @product.light%></p>
				<p><span>Bảo hành: </span><%= @product.guarantee%></p>
			</div>
			<div class="clear"></div>
		  </div>
	    <script type="text/javascript">
    $(document).ready(function () {
        $('#horizontalTab').easyResponsiveTabs({
            type: 'default', //Types: default, vertical, accordion           
            width: 'auto', //auto or any width like 600px
            fit: true   // 100% fit in a container
        });
    });
   </script>		
   <div class="content_bottom">
    		<div class="heading">
    		<h3>Related Products</h3>
    		</div>
    		<div class="see">
    			<p><a href="#">See all Products</a></p>
    		</div>
    		<div class="clear"></div>
    	</div>
   <div class="section group">
   			<% @category.products.each do |product|%>
				<div class="grid_1_of_4 images_1_of_4">
					 <%= image_tag("#{product.image}",size:"143x143")%>					
					<div class="price" style="border:none">
					       		<div class="add-cart" style="float:none">
									<h4><%= link_to"Chi tiết",products_view_path(product)%></h4>
							     </div>
							 <div class="clear"></div>
					</div>
				</div>
			<% end -%>
			</div>
        </div>
				<div class="rightsidebar span_3_of_1">
					<h2>CATEGORIES</h2>
					<ul>
						<% @category_all.each do |category|%>
							<li><%= link_to"#{category.name}",category_path(category) %></li>
						<% end -%>
    				</ul>
    			</div>
 		</div>
 	</div>
    </div>
 </div>