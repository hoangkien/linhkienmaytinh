<div class="grid_1_of_4 images_1_of_4">
  <% if Product.limit(5).order(id: :desc).pluck(:id).include?product.id %>
    <%= image_tag"/assets/n.gif", style:"position: absolute;width: 40px;height: 30px;" %>
  <% end -%>
  <%= link_to image_tag("#{product.image}",size:"100x200",title: "#{product.name}",class: "product_image"),products_view_path(product) %>
  <div class="details-product"><%= product.name%></div>
  <div class="price-details">
      <div class="price-number">
      <p><span class="rupees">Giá : Liên Hệ</span></p>
      </div>
            <div class="add-cart">
              <h4>
                <%= link_to(products_view_path(product), method: :get) do %>
                  <i class="fa fa-eye" style=" margin-right: 6px;"></i>
                  <span>Chi tiết</span>
                <% end -%>
              </h4>
           </div>
      <div class="clear"></div>
  </div>
</div>
